{
  "name": "blueprism-scheduler-backend",
  "version": "0.0.1",
  "description": "Node based alternative of BluePrism's built-in scheduler.",
  "main": "index.js",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "build": "pkg . --output ./build/Blue_Prism_scheduler_server.exe && npm run copy-assets",
    "copy-assets": "copy .\\assets\\*.* .\\build\\ && copy .\\sample.env .\\build\\.env && ren .\\build\\WinSW.NET4.exe Blue_Prism_scheduler_installer.exe",
    "debug": "set DEBUG=* & npm dev",
    "dev": "nodemon --watch .env --watch src ./src/index.ts",
    "lint": "eslint ./src/**/*.{ts,tsx}",
    "lint-fix": "eslint --fix ./src/**/*.{ts,tsx} ./tests/**/*.{ts,tsx}",
    "prebuild": "rmdir /Q /S build & rmdir /Q /S pre-build & tsc",
    "seedDB": "ts-node ./tests/seedDatabase.ts",
    "start": "ts-node ./src/index.ts",
    "test": "jest",
    "test-cover": "jest --coverage --noStackTrace",
    "test-watch": "jest --watch --noStackTrace"
  },
  "bin": "./pre-build/src/index.js",
  "pkg": {
    "assets": "./pre-build/**/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peterdanis/blueprism-scheduler-backend.git"
  },
  "keywords": [
    "blueprism",
    "scheduler"
  ],
  "author": "peter.danis@outlook.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/peterdanis/blueprism-scheduler-backend/issues"
  },
  "homepage": "https://github.com/peterdanis/blueprism-scheduler-backend#readme",
  "dependencies": {
    "async-retry": "^1.3.1",
    "axios": "^0.21.1",
    "axios-retry": "^3.1.9",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "express": "~4.17.1",
    "morgan": "^1.10.0",
    "mssql": "^6.3.1",
    "node-schedule": "^1.3.2",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.29",
    "typescript": "^4.1.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.2",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.16",
    "@types/node-schedule": "^1.3.1",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "pkg": "^4.4.9",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1"
  }
}
